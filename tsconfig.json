{
  "compilerOptions": {
    "target": "ES6",                        // Versione JavaScript da generare
    "module": "commonjs",                   // Sistema di moduli per Node.js
    "outDir": "./dist",                     // Cartella in cui salvare i file compilati
    "rootDir": "./src",                     // Cartella contenente i file sorgente TypeScript
    "esModuleInterop": true,                // Consente l'interoperabilit√† con i moduli ES6
    "strict": true,                         // Abilita tutte le verifiche di TypeScript
    "skipLibCheck": true                    // Evita di controllare i tipi nei moduli delle librerie
  },
  "include": ["src/**/*"],                   // Include tutti i file TypeScript nella cartella src
  "exclude": ["node_modules"]                // Esclude la cartella node_modules
}
