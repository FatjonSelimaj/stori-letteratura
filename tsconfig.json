{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src"  // Salta il controllo delle definizioni dei tipi per migliorare la velocit√† di compilazione
  },
  "include": ["src/**/*"],  // Includi tutti i file TypeScript nella cartella src
  "exclude": ["node_modules"]  // Escludi la cartella node_modules dalla compilazione
}